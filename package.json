{
  "name": "@g4ndy/react-hooks",
  "version": "1.4.0",
  "description": "Several hooks created for self-education",
  "homepage": "https://github.com/JstUsername/react-hooks#readme",
  "license": "MIT",
  "author": {
    "name": "Andrey Gorchakov",
    "email": "g4ndy.c4ndy1@gmail.com"
  },
  "keywords": [
    "react",
    "react-hooks"
  ],
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bugs": {
    "url": "https://github.com/JstUsername/react-hooks/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JstUsername/react-hooks.git"
  },
  "scripts": {
    "build": "rollup -c",
    "dev:examples": "vite --config examples/vite.config.ts",
    "build:examples": "tsc -b && vite build --config examples/vite.config.ts",
    "preview:examples": "vite preview --config examples/vite.config.ts",
    "dev:test": "vitest",
    "test": "vitest run",
    "lint": "eslint",
    "lint:fix": "eslint src --fix",
    "type-check:lib": "tsc -p tsconfig.json --noEmit",
    "type-check:examples": "tsc -p examples/tsconfig.json --noEmit",
    "type-check": "npm run type-check:lib && npm run type-check:examples",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx}\"",
    "prepublishOnly": "npm run lint && npm run format",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.12.0",
    "release-please": "^17.1.3",
    "rollup": "^4.55.1",
    "rollup-plugin-dts": "^6.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "vitest-browser-react": "^2.0.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
